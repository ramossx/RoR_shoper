<!DOCTYPE html>
<html>
    <body>
        <div class="con">
        	<div class="title">
        		<%=@category.name%>
        	</div>
        	<%@items.each do |item|%>        	
	        	<div class="item"> 
	        		<%= link_to item_path(item.id) do%>
		        		<i class="itn"><%=item.name[0..10]%></i>
		        	<%end%>
    		        <%= image_tag item.photos[0].url, width: 200, heigth: 200 %>
	        		<i class="itc">Count: <%=item.count%></i>
	        	</div>
	       	<%end%>
    	</div>
    </body>
</html>