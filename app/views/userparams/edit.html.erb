<h3>Profile of user <b><%=@userparam.user.nickname%></b></h3>
<%=form_for @userparam, url:userparam_path, method: :patch do |f|%>

  <div class="form-group ">
  	<%=f.label "A brief bio" %>
    <%= f.text_area :bio, class:"form-control"%>
	</div>

  <div class="form-group ">
    <%=f.label :phone %>
    <%= f.text_field :phone, class:"form-control"%>
  </div>


  <%=f.submit "Refresh"%>

<%end%>